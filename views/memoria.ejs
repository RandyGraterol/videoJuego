         <div style='display:flex;justify-content: center;align-items: center;'>
		<button class="reset" onclick="window.location.reload()">Reset</button>
		<button class="reset" onclick='regresar()'>Salir</button>
        </div>

	</div>
	<script>
        
        function regresar(){
        	window.location.href='/';
        }

